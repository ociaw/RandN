<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <AssemblyName>RandN.MersenneTwister</AssemblyName>
        <RootNamespace>RandN.Rngs</RootNamespace>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>11.0</LangVersion>
        <AnalysisLevel>7</AnalysisLevel>
        <Version>0.4.0</Version>
        <Authors>ociaw</Authors>
        <Company>ociaw</Company>
        <Description>RandN.MersenneTwister provides an implementation of Mersenne Twister for RandN, an alternative library for random number generation.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://randn.dev/</PackageProjectUrl>
        <RepositoryUrl>https://hg.sr.ht/~ociaw/RandN</RepositoryUrl>
        <RepositoryType>hg</RepositoryType>
        <PackageTags>rng random randn mersenne twister</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageReleaseNotes>
            Version 0.4.0
            Initial Release
        </PackageReleaseNotes>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Fody" Version="6.6.4">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="NullGuard.Fody" Version="3.1.1" PrivateAssets="All" />
        <PackageReference Include="RandN.Core" Version="[0.4.0,0.5.0)" />
        <ProjectReference Include="..\Core\Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="/" />
    </ItemGroup>
</Project>
